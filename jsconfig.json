{
    "compilerOptions": {
      "module": "es6",
      "target": "ES2021",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "allowJs": true,
      "checkJs": true
    },
    "javascript.implicitProjectConfig.checkJs": true,
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "test/**/*"]
}